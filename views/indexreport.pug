doctype html
html
    head
        title Weather report
        link(href='index.css' type='text/css' rel='stylesheet')
    body
        div.indexreport
            h3 Current weather in #[span.orangeText #{cityCountry}]
            p Updated #{date} at #{time}
            p #[strong #{temp}]
            img(src='icons/' + weatherIcon)
            p #[strong #{weatherDesc}]
            p Wind: #{wind}
            p Humidity: #{humidity} % 
            p Pressure: #{pressure} mb
            p Sunrise: #{sunrise}
            p Sunset: #{sunset}
            form(action='/weather_units_toggle' method='get')
                h5 Display 
                    input(type='submit' name='units_toggle' value=units_toggle_value)
            form(action='/weather' method='get')
                h5 Show me  
                    input(type='submit' name='location' value=change_location_value)